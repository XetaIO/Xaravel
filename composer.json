{
    "name": "xetaio/xetaravel",
    "description": "A light version of Xeta's website using Laravel.",
    "keywords": [
        "Xeta",
        "framework",
        "laravel",
        "website",
        "blog",
        "administration"
    ],
    "homepage": "https://github.com/XetaIO/Xetaravel",
    "license": "MIT",
    "type": "project",
    "support": {
        "source": "https://github.com/XetaIO/Xetaravel",
        "issues": "https://github.com/XetaIO/Xetaravel/issues"
    },
    "authors": [
        {
            "name": "Xety",
            "email": "zoro.fmt@gmail.com",
            "homepage": "https://github.com/Xety"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/XetaIO/breadcrumbs"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.3.0",
        "filp/whoops": "^2.1",
        "mews/purifier": "~2.0",
        "greggilbert/recaptcha": "~2.0",
        "kirkbushell/eloquence": "~2.0",
        "creitive/breadcrumbs": "dev-bootstrap4"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*",
        "squizlabs/php_codesniffer": "3.0.x-dev",
        "barryvdh/laravel-debugbar": "^2.3"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
